<h1 class="text-center mb-4">Artistas y Bandas</h1>

<table class="table border">

    <thead class="table-primary text-center">
        <th class="border">Nombre</th>
        <th class="border">Integrantes</th>
        <th class="border">Debut</th>
        <th class="border">Formación</th>
        <th class="border">Conciertos </th>
        <th class="border">Acciones</th>
    </thead>

    <tbody class="bg-light">
        <% @groups.each do |group| %>
            <tr>
                <td> <%= group.name  %> </td>
                <td class="text-center border"> <%= group.members %> </td>
                <td class="text-center"> <%= group.debut %> </td>
                <td class="text-center border"> <%= group.team %> </td>
                <td> 
                    <ul>
                        <% group.concerts.each do |concert| %>
                            <li><%= "#{concert.name} "%></li>
                        <%end%>
                    </ul>
                </td>
                <td class="text-center border">
                    <span>
                        <%= link_to '<i class="far fa-eye"></i>'.html_safe, group, class:"btn btn-success" %>
                        <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_group_path(group.id), class:"btn btn-warning" %>
                        <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, group, method: :delete, data: {confirm: "¿Está seguro de eliminar este artista?"}, class:"btn btn-danger"  %>
                    </span>
                </td>
            </tr>
        <% end %>
    </tbody>

</table>


