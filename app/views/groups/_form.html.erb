<div class="container border rounded bg-light">
    <%= form_with(model: group, local: true) do |f| %>
        
        <div class="d-flex flex-row">

            <div class="mt-4 mr-5">
                <%= f.label "Nombre:" %>
                <%= f.text_field :name, class:"form form-control", size:"50" %>
            </div>

            <div class="mt-4">
                <%= f.label "Miembros:" %>
                <%= f.number_field :members, class:"form-control" %>
            </div>
        </div>

        <div class="d-flex flex-row">

            <div class="mt-4 mr-5">
                <%= f.label "Debut:" %>
                <%= f.date_field :debut, class:"form form-control" %>
            </div>

            <div class="mt-4">
                <%= f.label "Formación:" %><br>
                <%= f.select :team, Group.teams.keys, class:"form form-control"  %>
            </div>
        </div>

        <div class="mt-4 mb-4">
            <%= f.submit "Añadir Artista", class:"btn btn-primary" %>
        </div>

    <% end %>
</div>