<div class="container border rounded bg-light">
    <%= form_with(model: concert, local: true) do |f| %>

        <div class="d-flex flex-row">

            <div class="mt-4 mr-5">
                <%= f.label "Nombre:" %>
                <%= f.text_field :name, class:"form form-control", size:"50" %>
            </div>

            <div class="mt-4 mr-5">
                <%= f.label "Duracion:" %><br>
                <%= f.time_field :duration, value: '%H:%M', class:"form form-control"  %>
            </div>

            <div class="mt-4 mr-5">
                <%= f.label "Audiciencia:" %><br>
                <%= f.number_field :audience, min: 0, class:"form-control" %>
            </div>

        </div>

        <div class="d-flex flex-row">

            <div class="mt-4 mr-5">
                <%= f.label "Fecha del evento:" %><br>
                <%= f.date_field :event_date, class:"form-control" %>
            </div>

            <div class="mt-4 mr-5">
                <%= f.label 'Artista:' %><br>
                <%= f.select :group_id, options_from_collection_for_select(@groups, :id, :name), class:"form form-control", prompt: "Elije un Artista" %>
            </div>

        </div>

        <div class="mt-4 mb-4">
            <%= f.submit "AÃ±adir Concierto", class:"btn btn-primary" %>
        </div>

    <%end%>
</div>